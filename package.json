{
    "name": "redis-drs",
    "version": "1.0.0",
    "description": "",
    "main": "./lib/src/index.js",
    "types": "./lib/src/index.d.ts",
    "bin": {
        "redis-drs": "lib/src/bin/cli.js"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "dev": "ts-node-dev --no-notify --respawn --transpile-only -r tsconfig-paths/register src/index",
        "dev:cli": "ts-node-dev --no-notify --respawn --transpile-only -r tsconfig-paths/register src/bin/cli",
        "build": "tsc",
        "bundle": "node esbuild.config.js",
        "bundle:dev": "npm run esbuild -- --watch",
        "npm:login": "npm adduser",
        "publish": "npm publish --access public",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "test": "jest -o --watch --detectOpenHandles",
        "clean": "rimraf lib bundle",
        "format": "prettier --write --ignore-unknown ."
    },
    "license": "GPL",
    "keywords": [
        "redis",
        "dump",
        "restore",
        "backup",
        "sync"
    ],
    "author": {
        "name": "Muhammad Shaban",
        "email": "muhammad.shaban.dev@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MuhammadShaban/redis-drs"
    },
    "dependencies": {
        "event-stream": "^4.0.1",
        "ioredis": "^5.2.2",
        "progress": "^2.0.3",
        "yargs": "^17.5.1"
    },
    "devDependencies": {
        "@types/eslint": "^8.4.5",
        "@types/event-stream": "^4.0.0",
        "@types/jest": "^28.1.6",
        "@types/node": "^16.11.47",
        "@types/progress": "^2.0.5",
        "@types/yargs": "^17.0.11",
        "@typescript-eslint/parser": "^5.33.0",
        "esbuild": "^0.15.0",
        "eslint": "^8.21.0",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "pre-commit": "^1.2.2",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.7.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*": [
            "npm run format",
            "npm run lint",
            "git add"
        ]
    }
}
